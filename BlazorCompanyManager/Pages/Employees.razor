@page "/employees"
@inject BlazorCompanyManager.Data.IEmployeeService EmployeeService

<h1>Employees</h1>
<br />
<a href="employee/0">Add employee</a>
<table class="table">
  <thead>
    <tr>
      <td>Id</td>
      <td>Name</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    @foreach (var employee in employees)
    {
      <tr>
        <td>@employee.Id</td>
        <td>@employee.Name</td>
        <td>
          <a href="employee/@employee.Id">Edit</a>
        </td>
        <td>
          <button class="btn btn-primary" @onclick="@(e => OnDelete(employee.Id))">Delete</button>
        </td>
      </tr>
    }
  </tbody>
</table>


@code {

  private List<BlazorCompanyManager.Data.Employee> employees;

  protected override void OnInitialized()
  {
    employees = EmployeeService.GetEmployees();
  }

  private void OnDelete(Guid id)
  {
    EmployeeService.DeleteEmployee(id);
  }
}
